{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "ShapeShift",
  "description": "The ShapeShift Public API enables developers to integrate multi-chain swap functionality into their applications.",
  "logo": {
    "light": "/images/logo-light.svg",
    "dark": "/images/logo-dark.svg",
    "href": "https://shapeshift.com"
  },
  "favicon": "/images/favicon.svg",
  "colors": {
    "primary": "#3B82F6",
    "light": "#60A5FA",
    "dark": "#2563EB"
  },
  "appearance": {
    "default": "dark",
    "strict": false
  },
  "background": {
    "decoration": "gradient"
  },
  "styling": {
    "eyebrows": "section"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "/getting-started/quickstart"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "icon": "book",
        "groups": [
          {
            "group": "Getting Started",
            "icon": "play",
            "pages": [
              "index",
              "getting-started/quickstart",
              "getting-started/authentication",
              "getting-started/asset-ids"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "icon": "square-terminal",
        "groups": [
          { "group": "Overview", "pages": ["api-reference/overview"] },
          { "group": "Chains", "openapi": "openapi.yaml", "pages": ["GET /v1/chains", "GET /v1/chains/count"] },
          { "group": "Assets", "openapi": "openapi.yaml", "pages": ["GET /v1/assets", "GET /v1/assets/{assetId}"] },
          { "group": "Swaps", "openapi": "openapi.yaml", "pages": ["GET /v1/swap/rates", "POST /v1/swap/quote"] }
        ]
      }
    ],
    "global": {
      "anchors": [
        { "anchor": "X", "icon": "x-twitter", "href": "https://x.com/ShapeShift" },
        { "anchor": "Discord", "icon": "discord", "href": "https://discord.gg/shapeshift" },
        { "anchor": "GitHub", "icon": "github", "href": "https://github.com/shapeshift" }
      ]
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/ShapeShift",
      "github": "https://github.com/shapeshift",
      "discord": "https://discord.gg/shapeshift"
    }
  },
  "api": {
    "openapi": "openapi.yaml",
    "playground": { "display": "interactive" }
  },
  "search": { "prompt": "Search ShapeShift docs..." },
  "seo": { "indexing": "navigable" }
}
