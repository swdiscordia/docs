{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "ShapeShift",
  "description": "A unified API for cross-chain swaps, asset management, and blockchain data across every major ecosystem.",
  "logo": {
    "light": "/images/logo-light.svg",
    "dark": "/images/logo-dark.svg",
    "href": "https://shapeshift.com"
  },
  "favicon": "/images/favicon.svg",
  "colors": {
    "primary": "#3B82F6",
    "light": "#60A5FA",
    "dark": "#2563EB"
  },
  "appearance": {
    "default": "dark",
    "strict": false
  },
  "background": {
    "decoration": "gradient"
  },
  "styling": {
    "eyebrows": "section",
    "codeblocks": {
      "theme": "dark"
    }
  },
  "navbar": {
    "links": [
      { "label": "GitHub", "href": "https://github.com/shapeshift" },
      { "label": "Discord", "href": "https://discord.gg/shapeshift" }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://shapeshift.com/developers"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "icon": "book",
        "groups": [
          {
            "group": "Getting Started",
            "icon": "play",
            "pages": [
              "getting-started/introduction",
              "getting-started/quickstart",
              "getting-started/authentication",
              "getting-started/asset-ids"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "icon": "square-terminal",
        "groups": [
          {
            "group": "Overview",
            "pages": ["api-reference/overview"]
          },
          {
            "group": "Chains",
            "openapi": "openapi.yaml",
            "pages": ["GET /v1/chains", "GET /v1/chains/count"]
          },
          {
            "group": "Assets",
            "openapi": "openapi.yaml",
            "pages": ["GET /v1/assets", "GET /v1/assets/{assetId}"]
          },
          {
            "group": "Swaps",
            "openapi": "openapi.yaml",
            "pages": ["GET /v1/swap/rates", "POST /v1/swap/quote"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        { "anchor": "API Status", "icon": "signal", "href": "https://status.shapeshift.com" },
        { "anchor": "Support", "icon": "envelope", "href": "https://shapeshift.com/support" }
      ]
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/ShapeShift",
      "github": "https://github.com/shapeshift",
      "discord": "https://discord.gg/shapeshift"
    }
  },
  "api": {
    "openapi": "openapi.yaml",
    "playground": { "display": "interactive" },
    "examples": {
      "languages": ["bash", "python", "javascript"],
      "autogenerate": true
    }
  },
  "contextual": { "options": ["copy", "view", "claude", "cursor"] },
  "search": { "prompt": "Search ShapeShift docs..." },
  "seo": { "indexing": "navigable" }
}
